{
  "name": "Basel III Capital Requirements",
  "domain": "financial",
  "version": "1.1",
  "description": "Ensures Tier 1 capital and leverage ratios meet Basel III standards.",
  "rules": [
    {
      "field": "tier1_ratio",
      "expression": "data['tier1_ratio'] >= 6.0"
    },
    {
      "field": "leverage_ratio",
      "expression": "data['leverage_ratio'] >= 3.0"
    }
  ],
  "logic": "AND"
}